<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="main-container">

      <% include ../static/partials/messages.ejs %>

      <h3>Update your item "<%= item.title %>"</h3>

      <form action="/bucketItems/<%= item.id %>/updateBucketItem" method="post">
        <div class="form-group">
          <label for="title">Enter new title:</label>
          <input type="title" class="form-control" name="title" value="<%=item.title%>" placeholder="<%=item.title%>">
          <small>Item title is required</small>
        </div>

        <div class="form group">
          <label for="description">Enter new description:</label>
          <input type="text" class="form-control" name="description" value="<%=item.description%>" placeholder="<%=item.description%>">
        </div>

        <div class="form-group">
          <label for="location">Update location:</label>
          <input type="text" class="form-control" name="location" value="<%=item.location%>" placeholder="<%=item.location%>">
        </div>

        <div class="form-group">
          <label for="type">What is this item?</label>
          <input type="radio" class="form-control" name="type" value="lifeExperience">Life Experience
          <input type="radio" class="form-control" name="type" value="localAttraction">Local Attraction
          <input type="radio" class="form-control" name="type" value="travelDestination">Travel Destination
          <small>Item type is required</small>
        </div>

        <button type="submit" class="btn btn-primary">Update Item</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
